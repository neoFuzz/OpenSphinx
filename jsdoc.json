{
  "source": {
    "include": ["./client/src", "./shared/src", "./server/src", "./README.md"],
    "includePattern": "\\.(js|ts)$",
    "excludePattern": "(node_modules/|docs/|out/)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "./docs/",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}